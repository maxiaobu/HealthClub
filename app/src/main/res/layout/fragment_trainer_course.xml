

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.maxiaobu.healthclub.ui.fragment.TrainerCourseFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/sz_20"
        android:paddingTop="@dimen/sz_6"
        android:text="私教"
        android:textColor="@color/colorTextThird"
        android:textSize="@dimen/sz_16"
        android:layout_marginTop="@dimen/sz_16"
        android:paddingBottom="@dimen/sz_10"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sz_16"
        android:background="@color/white"
        android:paddingLeft="@dimen/sz_20"
        android:paddingTop="@dimen/sz_6"
        android:text="团操"
        android:textColor="@color/colorTextThird"
        android:textSize="@dimen/sz_16"
        android:paddingBottom="@dimen/sz_10"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
</LinearLayout>
</ScrollView>
