<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:orientation="vertical"
                                                 android:padding="@dimen/sz_2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sz_8"
        android:layout_marginRight="@dimen/sz_8"
        android:layout_marginTop="@dimen/sz_10"
        android:layout_marginBottom="@dimen/sz_4"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/sz_10"
        >

        <LinearLayout
            android:id="@+id/ly_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/sz_6">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/sz_10">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/sz_80"
                    android:layout_height="@dimen/sz_80"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sz_10"
                    android:layout_toRightOf="@id/iv_photo"
                    tools:text="sdkfjhdks"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/sz_18"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="@dimen/sz_10"
                    android:layout_marginTop="@dimen/sz_10"
                    android:layout_toRightOf="@id/iv_photo"
                    android:text="ajdfhkjdshf"
                    android:textColor="@color/colorTextThird"
                    android:textSize="@dimen/sz_16"/>

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="未完成"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sz_18"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_complete"
                    android:layout_marginTop="@dimen/sz_6"
                    android:text="100元"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/sz_18"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/sz_4"
                android:layout_marginRight="@dimen/sz_4"/>

            <TextView
                android:id="@+id/tv_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="@dimen/sz_10"
                android:layout_marginTop="@dimen/sz_10"
                android:text="实付：100元"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/sz_20"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"
                android:layout_marginBottom="@dimen/sz_10"
                android:layout_marginLeft="@dimen/sz_4"
                android:layout_marginRight="@dimen/sz_4" />

            <LinearLayout
                android:id="@+id/ly_nopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_add"
                    android:layout_weight="1"
                    android:background="@drawable/bg_food_cart_select"
                    android:gravity="center"
                    android:paddingTop="@dimen/sz_6"
                    android:paddingBottom="@dimen/sz_6"

                    android:text="继续支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sz_18"/>

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sz_20"
                    android:layout_toRightOf="@id/iv_add"
                    android:layout_weight="1"
                    android:background="@drawable/bg_food_cart_select"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sz_18"
                    android:paddingTop="@dimen/sz_6"
                    android:paddingBottom="@dimen/sz_6"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/iv_add"
                android:background="@drawable/bg_food_cart_select"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/white"
                android:textSize="@dimen/sz_18"
                android:paddingTop="@dimen/sz_6"
                android:paddingBottom="@dimen/sz_6"
                android:visibility="gone"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>