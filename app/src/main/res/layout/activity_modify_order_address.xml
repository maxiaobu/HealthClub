<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.ModifyOrderAddressActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F27241"
            app:collapseIcon="@mipmap/ic_navigation_icon"
            app:navigationIcon="@mipmap/ic_navigation_icon"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <TextView
                android:id="@+id/tv_title_common"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/sz_20"
                android:background="@color/colorPrimary"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            android:text="区："
            android:textSize="@dimen/sz_18"
            android:textColor="@color/colorTextThird"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            tools:text="和平区"
            android:textSize="@dimen/sz_18"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"
            android:background="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            android:text="详细地址："
            android:textSize="@dimen/sz_18"
            android:textColor="@color/colorTextThird"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"
            android:textColor="@color/colorTextSecondary"
            tools:hint="sdkfjlskdajflksdjaflksdja"
            android:textColorHint="@color/colorTextSecondary"
            android:background="@color/white"
            android:paddingTop="@dimen/sz_10"
            android:paddingBottom="@dimen/sz_30"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            android:text="修改范围："
            android:textSize="@dimen/sz_18"
            android:textColor="@color/colorTextThird"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"/>
        <TextView
            android:id="@+id/tv_range"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_40"
            android:text="所有"
            android:textSize="@dimen/sz_18"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sz_20"
            android:background="@color/white"/>

    </LinearLayout>
</RelativeLayout>
