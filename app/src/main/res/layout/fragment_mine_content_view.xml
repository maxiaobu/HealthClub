                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_mine_cart"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sz_6"
                    android:text="我的会员卡"/>
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>


        <!--签到-->
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_weight="1"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleDimension="10dp" >
            <LinearLayout
                android:id="@+id/ly_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_mine_qiandao"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sz_6"
                    android:text="签到"/>
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <!--申请认证-->
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDimension="10dp"
        android:layout_marginTop="@dimen/sz_20">
        <LinearLayout
            android:id="@+id/ly_authentication"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sz_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sz_20"
                android:layout_weight="1"
                android:text="申请认证"
                android:textSize="@dimen/sz_16"
                />

            <ImageView
                android:layout_width="@dimen/sz_18"
                android:layout_height="@dimen/sz_18"
                android:layout_marginRight="@dimen/sz_20"
                android:src="@mipmap/ic_arrow_right"/>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>


    <!--教练专有-->

